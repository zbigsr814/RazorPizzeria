@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

<div class="text-center">
    <h1>Robimy najlepszą pizzę</h1>
    <h2>Wiemy, co dobre</h2>
    <p class="smallText"><i>Max. jedna pizza na jedno zamówienie</i></p>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 szary-prostokat d-flex flex-column align-items-center" style="height: 80%;">
                    <!-- Obraz, tekst i przycisk -->
                    <img src="~/images/Pizzas/Create.png" class="img-fluid mb-3" style="width: 100%; height: 100%; object-fit: cover;" />
                    <div class="text-center">
                        <h3 style="text-align: left;">Utwórz swoją własną pizzę</h3>
                        <a class="btn btn-primary" asp-area="" asp-page="/Forms/CustomPizza">Utwórz</a>
                    </div>
                </div>
            </div>

            @foreach (var pizza in Model.fakePizzaDB)
            {
                var imagePath = "~/images/Pizzas/" + pizza.ImageTitle + ".png";

                <div class="col-4 mb-5">
                    <img src=@imagePath class="w-100" asp-append-version=true />
                    <a class="btn btn-primary mt-5" 
                    asp-area="" asp-page="/Checkout/Checkout"
                       asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrise="@pizza.FinalPrise" asp-route-PizzaName="@pizza.PizzaName">Wejź tą pizze</a>
                </div>
            }

        </div>
    </div>
</div>